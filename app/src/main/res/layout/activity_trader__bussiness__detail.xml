<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.Trader_Bussiness_DetailActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <include layout="@layout/app_toolbar_home" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:padding="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:id="@+id/ck_trader_bussiness_check1"
                            android:gravity="center"
                            android:layout_gravity="center"

                            android:layout_height="wrap_content"
                            android:buttonTint="@color/yellow"
                            android:text="Trader"/>

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:id="@+id/ck_trader_bussiness_check2"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/yellow"
                            android:text="Wholesaler"/>

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:id="@+id/ck_trader_bussiness_check3"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/yellow"
                            android:text="Second Hand"/>
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:id="@+id/ck_trader_bussiness_check4"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/yellow"
                            android:text="Transporter"/>

                    </LinearLayout>
                </HorizontalScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/border_round_corner"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="6dp">

                    <gautam.easydevelope.widget.GEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:background="@android:color/transparent"
                        android:hint="Business Name:"
                        android:inputType="text"
                        android:id="@+id/et_trader_bussiness_bname"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:textAllCaps="true"
                        android:textColorHint="@color/colorBlack"
                        android:textSize="15sp"
                        app:g_font="@string/roboto_regular" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/border_round_corner"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="6dp">

                    <gautam.easydevelope.widget.GEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:background="@android:color/transparent"
                        android:hint="Username:"
                        android:inputType="text"
                        android:id="@+id/et_trader_bussiness_name"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:textAllCaps="true"
                        android:textColorHint="@color/colorBlack"
                        android:textSize="15sp"
                        app:g_font="@string/roboto_regular" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/border_round_corner"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="6dp">

                    <gautam.easydevelope.widget.GEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:background="@android:color/transparent"
                        android:hint="Password:"
                        android:inputType="textPassword"
                        android:id="@+id/et_trader_bussiness_password"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:textAllCaps="true"
                        android:textColorHint="@color/colorBlack"
                        android:textSize="15sp"
                        app:g_font="@string/roboto_regular" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/border_round_corner"
                    >

                    <Spinner
                        android:id="@+id/spn_county"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="35dp"
                    android:background="@drawable/border_round_corner">

                    <Spinner
                        android:id="@+id/spn_constituency"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="35dp"
                    android:background="@drawable/border_round_corner">

                    <Spinner
                        android:id="@+id/spn_ward"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />

                </LinearLayout>





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/border_round_corner"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="6dp">

                    <gautam.easydevelope.widget.GEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:background="@android:color/transparent"
                        android:hint="Enter Road &amp; Street:"
                        android:inputType="text"
                        android:id="@+id/et_trader_bussiness_street"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:textAllCaps="true"
                        android:textColorHint="@color/colorBlack"
                        android:textSize="15sp"
                        app:g_font="@string/roboto_regular" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/border_round_corner"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="6dp">

                    <gautam.easydevelope.widget.GEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:background="@android:color/transparent"
                        android:hint="Enter Building Name and Floor:"
                        android:inputType="text"
                        android:id="@+id/et_trader_bussiness_floor"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:textAllCaps="true"
                        android:textColorHint="@color/colorBlack"
                        android:textSize="15sp"
                        app:g_font="@string/roboto_regular" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/border_round_corner"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="6dp">

                    <gautam.easydevelope.widget.GEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:background="@android:color/transparent"
                        android:hint="Enter Business No:"
                        android:inputType="text"
                        android:id="@+id/et_trader_bussiness_no"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:textAllCaps="true"
                        android:textColorHint="@color/colorBlack"
                        android:textSize="15sp"
                        app:g_font="@string/roboto_regular" />

                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:padding="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:orientation="horizontal">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:id="@+id/ck_trader_bussiness_check5"
                            android:gravity="center"
                            android:layout_gravity="center"

                            android:layout_height="wrap_content"
                            android:buttonTint="@color/yellow"
                            android:text="NSSF"/>

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:id="@+id/ck_trader_bussiness_check6"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/yellow"
                            android:text="NHIF"/>

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:id="@+id/ck_trader_bussiness_check7"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/yellow"
                            android:text="KRA"/>
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:id="@+id/ck_trader_bussiness_check8"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/yellow"
                            android:text="PAYE"/>
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:id="@+id/ck_trader_bussiness_check9"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/yellow"
                            android:text="Biz Insurance"/>

                    </LinearLayout>
                </HorizontalScrollView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:layout_width="wrap_content"
                        android:layout_margin="10dp"
                        android:id="@+id/ck_trader_bussiness_check_tm"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/yellow"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Accept Terms &amp; Conditions &amp; Privacy &amp; Data Protection (View Terms &amp; Conditions)"/>

                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="16dp"

                    android:layout_marginRight="70dp"
                    android:layout_marginBottom="25dp"
                    app:cardBackgroundColor="#F6C028"
                    app:cardCornerRadius="4dp"

                    app:cardElevation="0dp">

                    <gautam.easydevelope.widget.GButton
                        android:id="@+id/btn_trader_business_next"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/btn_transparent"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="Add Shop"
                        android:textColor="@color/colorBlack"
                        android:textSize="18dp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>