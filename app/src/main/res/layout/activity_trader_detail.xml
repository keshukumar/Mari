                android:layout_width="match_parent"
                android:layout_height="60dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="4dp"
                        app:cardBackgroundColor="#F6C028"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="0dp">

                        <gautam.easydevelope.widget.GButton
                            android:layout_width="160dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/btn_transparent"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="Fruits"
                            android:textColor="@color/colorBlack"
                            android:textSize="18dp" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="4dp"
                        app:cardBackgroundColor="#F6C028"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="0dp">

                        <gautam.easydevelope.widget.GButton
                            android:layout_width="160dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/btn_transparent"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="Vegetables"
                            android:textColor="@color/colorBlack"
                            android:textSize="18dp" />

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="4dp"
                        app:cardBackgroundColor="#F6C028"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="0dp">

                        <gautam.easydevelope.widget.GButton
                            android:layout_width="160dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/btn_transparent"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="Cereals"
                            android:textColor="@color/colorBlack"
                            android:textSize="18dp" />

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="4dp"
                        app:cardBackgroundColor="#F6C028"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="0dp">

                        <gautam.easydevelope.widget.GButton
                            android:layout_width="160dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/btn_transparent"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="Butchery"
                            android:textColor="@color/colorBlack"
                            android:textSize="18dp" />

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="4dp"
                        app:cardBackgroundColor="#F6C028"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="0dp">

                        <gautam.easydevelope.widget.GButton
                            android:layout_width="160dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/btn_transparent"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="Dairy"
                            android:textColor="@color/colorBlack"
                            android:textSize="18dp" />

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="4dp"
                        app:cardBackgroundColor="#F6C028"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="0dp">

                        <gautam.easydevelope.widget.GButton
                            android:layout_width="160dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/btn_transparent"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="@string/fish_sea_food"
                            android:textColor="@color/colorBlack"
                            android:textSize="18dp" />

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="4dp"
                        app:cardBackgroundColor="#F6C028"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="0dp">

                        <gautam.easydevelope.widget.GButton
                            android:layout_width="160dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/btn_transparent"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="Ready Meals"
                            android:textColor="@color/colorBlack"
                            android:textSize="18dp" />

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="4dp"
                        app:cardBackgroundColor="#F6C028"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="0dp">

                        <gautam.easydevelope.widget.GButton
                            android:layout_width="160dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/btn_transparent"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="Bakery"
                            android:textColor="@color/colorBlack"
                            android:textSize="18dp" />

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="4dp"
                        app:cardBackgroundColor="#F6C028"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="0dp">

                        <gautam.easydevelope.widget.GButton
                            android:layout_width="160dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/btn_transparent"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="Papa Jo Pizza"
                            android:textColor="@color/colorBlack"
                            android:textSize="18dp" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="4dp"
                        app:cardBackgroundColor="#F6C028"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="0dp">

                        <gautam.easydevelope.widget.GButton
                            android:layout_width="160dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/btn_transparent"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="The Outlet"
                            android:textColor="@color/colorBlack"
                            android:textSize="18dp" />

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="4dp"
                        app:cardBackgroundColor="#F6C028"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="0dp">

                        <gautam.easydevelope.widget.GButton
                            android:layout_width="160dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/btn_transparent"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="@string/health_beauty"
                            android:textColor="@color/colorBlack"
                            android:textSize="18dp" />

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="4dp"
                        app:cardBackgroundColor="#F6C028"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="0dp">

                        <gautam.easydevelope.widget.GButton
                            android:layout_width="160dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/btn_transparent"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="Pharmacy"
                            android:textColor="@color/colorBlack"
                            android:textSize="18dp" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>


            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/dairy_120" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical">

                    <gautam.easydevelope.widget.GTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fruits n Vegetables"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <gautam.easydevelope.widget.GTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ksh 300/kg"
                        android:textSize="14dp" />

                    <gautam.easydevelope.widget.GTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Quantity"
                        android:textSize="14dp" />

                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_round_corner"
                        android:focusableInTouchMode="true"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="2dp">

                        <gautam.easydevelope.widget.GEditText
                            android:id="@+id/et_quantity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:background="@android:color/transparent"
                            android:hint="1"
                            android:inputType="number"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            android:textAllCaps="true"
                            android:textColorHint="@color/colorBlack"
                            android:textSize="15sp"
                            app:g_font="@string/roboto_regular" />

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        app:cardBackgroundColor="#F6C028"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="0dp">

                        <gautam.easydevelope.widget.GButton
                            android:id="@+id/btn_add_to_cart"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/btn_transparent"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="Add to Cart"
                            android:textColor="@color/colorBlack"
                            android:textSize="16dp" />

                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:orientation="vertical">

            <gautam.easydevelope.widget.GTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="gone"
                android:text="More From This Trader"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:src="@drawable/fruits_120" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:src="@drawable/ready_meals_120" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:src="@drawable/vegetables_120" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:src="@drawable/bakery_120" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:src="@drawable/cereals_120" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:src="@drawable/papa_j_piza_120" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:src="@drawable/butchery_120" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:src="@drawable/the_tutlet_120" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:src="@drawable/dairy_120" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:src="@drawable/health_beauty_120" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:src="@drawable/fish_seafood_120" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:src="@drawable/pharmacy_120" />

                    </LinearLayout>


