<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/app_toolbar_home"></include>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ll_account_type"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="24dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_view_credit_balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_round_corner"
                android:padding="8dp">

                <gautam.easydevelope.widget.GTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="View Credit Balance" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_view_credit_statement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/border_round_corner"
                android:padding="8dp">

                <gautam.easydevelope.widget.GTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="View Credit Statement" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_view_loan_balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/border_round_corner"
                android:padding="8dp">

                <gautam.easydevelope.widget.GTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="View Loan Balance" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_view_loan_statement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/border_round_corner"
                android:padding="8dp">

                <gautam.easydevelope.widget.GTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="View Loan Statement" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_send_credit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/border_round_corner"
                android:padding="8dp">

                <gautam.easydevelope.widget.GTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="Send Credit" />

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/ll_withdraw_fund"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/border_round_corner"
                android:padding="8dp">

                <gautam.easydevelope.widget.GTextView
                    android:id="@+id/tv_withdraw_funds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="Withdraw Funds" />

                <gautam.easydevelope.widget.GTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_withdraw_funds"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text=" (Trader)"
                    android:textSize="10dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_transfer_funds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/border_round_corner"
                android:padding="8dp">

                <gautam.easydevelope.widget.GTextView
                    android:id="@+id/tv_transfer_fund"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="Transfer Funds" />

                <gautam.easydevelope.widget.GTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_transfer_fund"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text=" (Trader)"
                    android:textSize="10dp" />


            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>

</LinearLayout>