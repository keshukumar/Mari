                <!--                        android:layout_width="match_parent"-->
                <!--                        android:layout_height="wrap_content"-->
                <!--                        android:layout_alignParentTop="true"-->
                <!--                        android:layout_toLeftOf="@+id/img_edit_pwd"-->
                <!--                        android:background="@android:color/transparent"-->
                <!--                        android:focusableInTouchMode="false"-->
                <!--                        android:hint="Change Pin"-->
                <!--                        android:inputType="textPassword"-->
                <!--                        android:padding="12dp"-->
                <!--                        android:paddingTop="8dp"-->
                <!--                        android:paddingBottom="8dp"-->
                <!--                        android:textSize="15sp"-->
                <!--                        app:g_font="@string/roboto_regular" />-->

                <!--                    <gautam.easydevelope.widget.GImageView-->
                <!--                        android:id="@+id/img_edit_pwd"-->
                <!--                        android:layout_width="20dp"-->
                <!--                        android:layout_height="20dp"-->
                <!--                        android:layout_alignParentRight="true"-->
                <!--                        android:layout_centerVertical="true"-->
                <!--                        android:layout_marginLeft="15dp"-->
                <!--                        android:src="@drawable/edit" />-->

                <!--                </RelativeLayout>-->


            </LinearLayout>

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="70dp"
                    app:cardBackgroundColor="#F6C028"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="0dp">

                    <gautam.easydevelope.widget.GButton
                        android:id="@+id/btn_update"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/btn_transparent"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="Update"
                        android:textColor="@color/colorBlack"
                        android:textSize="18dp" />

                </androidx.cardview.widget.CardView>


        </LinearLayout>

    </ScrollView>


</LinearLayout>