<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.Trader_Residence_Detail">
    <include layout="@layout/app_toolbar_home" />
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary" />

<ScrollView
    android:layout_width="match_parent"
    android:layout_marginTop="15dp"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">



    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"


        >
        <TableRow
            android:padding="6dp"
            android:background="@drawable/border_round_corner"
            android:layout_height="wrap_content">
            <gautam.easydevelope.widget.GTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="County:"
                android:textSize="15dp"
                android:textColor="@color/colorTextBlack"
                 />
            <gautam.easydevelope.widget.GEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
             android:id="@+id/et_resi_country"
                android:inputType="text"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textAllCaps="true"
                android:textColorHint="@color/colorBlack"
                android:textSize="15sp"
             />
        </TableRow>
        <TableRow
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:background="@drawable/border_round_corner">

            <gautam.easydevelope.widget.GTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Constituency:"
                android:textSize="15dp"
                android:textColor="@color/colorTextBlack"
                />
            <gautam.easydevelope.widget.GEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:id="@+id/et_resi_constituency"
                android:inputType="text"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textAllCaps="true"
                android:textColorHint="@color/colorBlack"
                android:textSize="15sp"
                />
        </TableRow>
        <TableRow
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:background="@drawable/border_round_corner">

            <gautam.easydevelope.widget.GTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ward::"
                android:textSize="15dp"
                android:textColor="@color/colorTextBlack"
                />
            <gautam.easydevelope.widget.GEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:inputType="text"
                android:id="@+id/et_resi_ward"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textAllCaps="true"
                android:textColorHint="@color/colorBlack"
                android:textSize="15sp"
                />
        </TableRow>
        <TableRow
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:background="@drawable/border_round_corner">

            <gautam.easydevelope.widget.GTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Road &amp; Street:"
                android:textSize="15dp"
                android:textColor="@color/colorTextBlack"
                />
            <gautam.easydevelope.widget.GEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:id="@+id/et_resi_road"
                android:inputType="text"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textAllCaps="true"
                android:textColorHint="@color/colorBlack"
                android:textSize="15sp"
                />
        </TableRow>
        <TableRow
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:background="@drawable/border_round_corner">

        <gautam.easydevelope.widget.GTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="House Name:"
            android:textSize="15dp"
            android:textColor="@color/colorTextBlack"
            />
        <gautam.easydevelope.widget.GEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:id="@+id/et_resi_housename"
            android:inputType="text"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textAllCaps="true"
            android:textColorHint="@color/colorBlack"
            android:textSize="15sp"
            />
    </TableRow>
        <TableRow
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:background="@drawable/border_round_corner">

            <gautam.easydevelope.widget.GTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="House Number:"
                android:textSize="15dp"
                android:textColor="@color/colorTextBlack"
                />
            <gautam.easydevelope.widget.GEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:inputType="text"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:id="@+id/et_resi_houseNo"
                android:textAllCaps="true"
                android:textColorHint="@color/colorBlack"
                android:textSize="15sp"
                />
        </TableRow>

    </TableLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="70dp"
        android:id="@+id/cv_resi_next"
        android:layout_marginBottom="18dp"
        app:cardBackgroundColor="#F6C028"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp">

        <gautam.easydevelope.widget.GButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btn_transparent"
            android:gravity="center"
            android:padding="8dp"
            android:text="Next"
            android:textColor="@color/colorBlack"
            android:textSize="18dp" />

    </androidx.cardview.widget.CardView>
</LinearLayout>
</ScrollView>
</LinearLayout>