<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_mains"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">

        <gautam.easydevelope.widget.GCircularImageView
            android:id="@+id/img_pImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/man" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/img_pImage"
            android:numStars="5"
            android:rating="2.0"
            android:scaleX="0.4"
            android:scaleY="0.4"
            android:stepSize="1.0"
            android:transformPivotX="0dp"
            android:transformPivotY="18dp" />


        <LinearLayout
            android:id="@+id/ll_trader_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/img_pImage"
            android:orientation="vertical">

            <gautam.easydevelope.widget.GTextView
                android:id="@+id/tv_trader_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Trader Name"
                android:textColor="@color/colorPrimary"
                android:textSize="14dp" />

            <gautam.easydevelope.widget.GTextView
                android:id="@+id/tv_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:drawableLeft="@drawable/ic_call"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:text="0725872580"
                android:textColor="@color/colorTextDark"
                android:textSize="13sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_toLeftOf="@+id/ll_toggle"
            android:orientation="vertical">

            <gautam.easydevelope.widget.GTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:singleLine="true"
                android:text="Trader Code"
                android:textColor="@color/colorPrimary"
                android:textSize="14dp" />

            <gautam.easydevelope.widget.GTextView
                android:id="@+id/tv_trader_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="001"
                android:textColor="@color/colorTextDark"
                android:textSize="13sp" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <ToggleButton
                android:id="@+id/tb_select_trader"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="end"
                android:layout_marginStart="10dp"
                android:background="@drawable/toggle_buttton_background"
                android:checked="true"
                android:textOff=""
                android:textOn="" />

            <gautam.easydevelope.widget.GTextView
                android:id="@+id/tv_view"
                style="@style/textHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/border_primary_round_corner"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="View"
                android:textColor="@color/colorBlack"
                android:textSize="13dp" />


        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/rl_mains"
        android:background="@color/colorTextDark"></View>


</RelativeLayout>
