<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/editstock_rl_mains"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">
<RelativeLayout
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_marginLeft="10dp"
    android:layout_centerVertical="true"
    android:id="@+id/rl"
    android:layout_marginTop="12dp"
    >
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <gautam.easydevelope.widget.GCircularImageView
        android:id="@+id/editstock_img_pImage"
        android:layout_width="48dp"
        android:layout_height="48dp"

        />
</RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/rl"
            android:orientation="vertical">

            <gautam.easydevelope.widget.GTextView
                android:id="@+id/editstock_tv_trader_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Fruits"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <ToggleButton
                android:id="@+id/editstock_tb_select_trader"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="end"
                android:layout_marginStart="10dp"
                android:background="@drawable/toggle_buttton_background"
                android:checked="true"
                android:textOff=""
                android:textOn="" />

        </LinearLayout>



    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/editstock_viewproduct"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_marginBottom="18dp"
            app:cardBackgroundColor="#F6C028"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp">

            <gautam.easydevelope.widget.GButton

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_transparent"
                android:gravity="center"
                android:padding="8dp"
                android:text="View Product"
                android:textColor="@color/colorBlack"
                android:textSize="18dp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/editstock_addproduct"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_alignParentBottom="true"
            app:cardBackgroundColor="#F6C028"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp">

            <gautam.easydevelope.widget.GButton

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_transparent"
                android:gravity="center"
                android:padding="8dp"
                android:text="Add Product"
                android:textColor="@color/colorBlack"
                android:textSize="18dp" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"

        android:background="@color/colorTextDark"/>
</LinearLayout>