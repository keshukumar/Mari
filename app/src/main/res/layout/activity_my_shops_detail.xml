<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/app_toolbar_home"></include>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary" />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ll_account_type"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="24dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_setup_payment_business"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_round_corner"
                android:padding="6dp">

                <Spinner
                    android:id="@+id/spn_duration"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:entries="@array/items_shops"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_reg_new_shop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/border_round_corner"
                android:padding="8dp">

                <gautam.easydevelope.widget.GTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="Register New Shop" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_setup_bank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/border_round_corner"
                android:padding="8dp">

                <gautam.easydevelope.widget.GTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="Setup Bank" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_my_fav_whole_seller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/border_round_corner"
                android:padding="8dp">

                <gautam.easydevelope.widget.GTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="My Favourite Wholesaler" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_edit_stock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/border_round_corner"
                android:padding="8dp">

                <gautam.easydevelope.widget.GTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="Edit Stock" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_edit_b_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/border_round_corner"
                android:padding="8dp">

                <gautam.easydevelope.widget.GTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="Edit Business Location" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_order_stock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/border_round_corner"
                android:padding="8dp">

                <gautam.easydevelope.widget.GTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="Order Merchandise" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_pause_shop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/border_round_corner"
                android:padding="8dp">

                <gautam.easydevelope.widget.GTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="Pause Shop" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_delete_shop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/border_round_corner"
                android:padding="8dp">

                <gautam.easydevelope.widget.GTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="Delete Shop" />

            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>
</ScrollView>
</LinearLayout>