<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/app_toolbar_home"></include>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv_allready_register">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/border_round_corner"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="6dp">

                <gautam.easydevelope.widget.GEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@android:color/transparent"
                    android:hint="Loan Amount"
                    android:inputType="number"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:textAllCaps="true"
                    android:textColorHint="@color/colorBlack"
                    android:textSize="15sp"
                    app:g_font="@string/roboto_regular" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/border_round_corner"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="6dp">

                <gautam.easydevelope.widget.GEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@android:color/transparent"
                    android:hint="Purpose of Loan"
                    android:inputType="textPhonetic"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:textAllCaps="true"
                    android:textColorHint="@color/colorBlack"
                    android:textSize="15sp"
                    app:g_font="@string/roboto_regular" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/border_round_corner"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="6dp">

                <Spinner
                    android:id="@+id/spn_duration"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:entries="@array/items_duration_months"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp" />
            </LinearLayout>

            <gautam.easydevelope.widget.GTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:gravity="end"
                android:text="maximum 12 months" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/border_round_corner"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="6dp">

                <gautam.easydevelope.widget.GEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@android:color/transparent"
                    android:focusableInTouchMode="false"
                    android:hint="Total Amount"
                    android:inputType="number"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:textAllCaps="true"
                    android:textColorHint="@color/colorBlack"
                    android:textSize="15sp"
                    app:g_font="@string/roboto_regular" />

            </LinearLayout>

            <gautam.easydevelope.widget.GTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:gravity="end"
                android:text="@string/including_interest" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/border_round_corner"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="6dp">

                <gautam.easydevelope.widget.GEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@android:color/transparent"
                    android:hint="Business Number"
                    android:inputType="text"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:textAllCaps="true"
                    android:textColorHint="@color/colorBlack"
                    android:textSize="15sp"
                    app:g_font="@string/roboto_regular" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/border_round_corner"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="6dp">

                <gautam.easydevelope.widget.GEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@android:color/transparent"
                    android:hint="Business KRA Pin Number"
                    android:inputType="textPassword"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:textAllCaps="true"
                    android:textColorHint="@color/colorBlack"
                    android:textSize="15sp"
                    app:g_font="@string/roboto_regular" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/border_round_corner"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="6dp">

                <gautam.easydevelope.widget.GEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@android:color/transparent"
                    android:hint="National Id Number"
                    android:inputType="text"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:textAllCaps="true"
                    android:textColorHint="@color/colorBlack"
                    android:textSize="15sp"
                    app:g_font="@string/roboto_regular" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/border_round_corner"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="6dp">

                <gautam.easydevelope.widget.GEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@android:color/transparent"
                    android:hint="Personal Pin Number"
                    android:inputType="text"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:textAllCaps="true"
                    android:textColorHint="@color/colorBlack"
                    android:textSize="15sp"
                    app:g_font="@string/roboto_regular" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/border_round_corner"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="6dp">

                <gautam.easydevelope.widget.GEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@android:color/transparent"
                    android:hint="Attach National ID Copy"
                    android:inputType="text"
                    android:focusableInTouchMode="false"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:textAllCaps="true"
                    android:textColorHint="@color/colorBlack"
                    android:textSize="15sp"
                    app:g_font="@string/roboto_regular" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/border_round_corner"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="6dp">

                <gautam.easydevelope.widget.GEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@android:color/transparent"
                    android:hint=" Attach Business KRA Pin Certificate"
                    android:inputType="text"
                    android:singleLine="true"
                    android:focusableInTouchMode="false"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:textAllCaps="true"
                    android:textColorHint="@color/colorBlack"
                    android:textSize="15sp"
                    app:g_font="@string/roboto_regular" />

            </LinearLayout>




            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="70dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="#F6C028"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp">

                <gautam.easydevelope.widget.GButton
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_transparent"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Submit"
                    android:textColor="@color/colorBlack"
                    android:textSize="18dp" />

            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </ScrollView>

</LinearLayout>