<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MyShops.EditStock_ViewProduct">
    <include layout="@layout/app_toolbar_home"></include>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/colorTextBlack"
            android:gravity="center"
            android:id="@+id/viewproduct_title"
            android:padding="12dp"
            android:text="Title"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/viewproduct_recycler"
            android:layout_margin="10dp"/>


        <androidx.cardview.widget.CardView
            android:id="@+id/cv_finish"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="70dp"
            android:layout_marginBottom="18dp"
            app:cardBackgroundColor="#F6C028"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp">

            <gautam.easydevelope.widget.GButton
                android:id="@+id/btn_finish"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_transparent"
                android:gravity="center"
                android:padding="8dp"
                android:text="Finish"
                android:textColor="@color/colorBlack"
                android:textSize="18dp" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>


</ScrollView>

</LinearLayout>