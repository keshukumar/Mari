<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.Staff_ManageStaff_Activity">

    <include layout="@layout/app_toolbar_home" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_staff_searchstaff"
                android:layout_marginTop="15dp"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:background="@drawable/border_round_corner"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="6dp">

                    <gautam.easydevelope.widget.GEditText
                        android:id="@+id/staff_manage_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:background="@android:color/transparent"
                        android:hint="Enter ID No:"
                        android:inputType="text"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:textAllCaps="true"
                        android:textColorHint="@color/colorBlack"
                        android:textSize="15sp"
                        app:g_font="@string/roboto_regular" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="35dp"
                    android:background="@drawable/border_round_corner"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="6dp">

                    <gautam.easydevelope.widget.GTextView
                        android:id="@+id/staff_manage_dob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:background="@android:color/transparent"
                        android:text="Select Date of Birth:"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"

                        android:textColor="@color/colorTextBlack"
                        android:textSize="15sp"
                        app:g_font="@string/roboto_regular" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="35dp"
                    android:background="@drawable/border_round_corner"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="6dp">

                    <gautam.easydevelope.widget.GEditText
                        android:id="@+id/staff_manage_marikiti"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:background="@android:color/transparent"
                        android:hint="Enter Marikiti No:"
                        android:inputType="text"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:textAllCaps="true"
                        android:textColorHint="@color/colorBlack"
                        android:textSize="15sp"
                        app:g_font="@string/roboto_regular" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="70dp"

                    android:layout_marginTop="16dp"
                    android:layout_marginRight="70dp"

                    app:cardBackgroundColor="#F6C028"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="0dp">

                    <gautam.easydevelope.widget.GButton
                        android:id="@+id/staff_portal_next"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/btn_transparent"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="Search"
                        android:textColor="@color/colorBlack"
                        android:textSize="18dp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <!--..................Search staff layout start.................-->

            <LinearLayout
                android:id="@+id/ll_staff_register_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Staff Detail"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="18dp" />

                <gautam.easydevelope.widget.GCircularImageView
                    android:id="@+id/iv_trader_register_pic"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/empty_profile" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:padding="4dp">

                    <TableRow
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_round_corner"
                        android:padding="6dp">

                        <gautam.easydevelope.widget.GTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Full Name:"
                            android:textColor="@color/colorTextBlack"
                            android:textSize="15dp" />

                        <gautam.easydevelope.widget.GTextView
                            android:id="@+id/et_trader_register_fullname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:inputType="text"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:textAllCaps="true"
                            android:textColorHint="@color/colorBlack"
                            android:textSize="15sp"
                            app:g_font="@string/roboto_regular" />

                    </TableRow>


                    <TableRow
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/border_round_corner"
                        android:padding="6dp">

                        <gautam.easydevelope.widget.GTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ID No.:"
                            android:textColor="@color/colorTextBlack"
                            android:textSize="15dp" />

                        <gautam.easydevelope.widget.GTextView
                            android:id="@+id/et_trader_register_id_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:inputType="text"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:textAllCaps="true"
                            android:textColorHint="@color/colorBlack"
                            android:textSize="15sp"
                            app:g_font="@string/roboto_regular" />


                    </TableRow>


                    <TableRow
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/border_round_corner"
                        android:padding="6dp">

                        <gautam.easydevelope.widget.GTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Date of Birth:"
                            android:textColor="@color/colorTextBlack"
                            android:textSize="15dp" />

                        <gautam.easydevelope.widget.GTextView
                            android:id="@+id/et_trader_register_dob"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="1"

                            android:background="@android:color/transparent"
                            android:inputType="number"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:textAllCaps="true"
                            android:textColorHint="@color/colorBlack"
                            android:textSize="15sp"
                            app:g_font="@string/roboto_regular" />


                    </TableRow>


                    <TableRow
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/border_round_corner"
                        android:padding="6dp">

                        <gautam.easydevelope.widget.GTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="MKT User No.:"
                            android:textColor="@color/colorTextBlack"
                            android:textSize="15dp" />

                        <gautam.easydevelope.widget.GTextView
                            android:id="@+id/et_trader_register_mkt_userno"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:inputType="text"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:textAllCaps="true"
                            android:textColorHint="@color/colorBlack"
                            android:textSize="15sp"
                            app:g_font="@string/roboto_regular" />


                    </TableRow>


                    <TableRow
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/border_round_corner"
                        android:padding="6dp">

                        <gautam.easydevelope.widget.GTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="User Name:"
                            android:textColor="@color/colorTextBlack"
                            android:textSize="15dp" />

                        <gautam.easydevelope.widget.GTextView
                            android:id="@+id/et_trader_register_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:inputType="text"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:textAllCaps="true"
                            android:textColorHint="@color/colorBlack"
                            android:textSize="15sp"
                            app:g_font="@string/roboto_regular" />


                    </TableRow>

                    <TableRow
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/border_round_corner"
                        android:padding="6dp">

                        <gautam.easydevelope.widget.GTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Phone No."
                            android:textColor="@color/colorTextBlack"
                            android:textSize="15dp" />

                        <gautam.easydevelope.widget.GTextView
                            android:id="@+id/et_trader_register_phoneno"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:inputType="number"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:textAllCaps="true"
                            android:textColorHint="@color/colorBlack"
                            android:textSize="15sp"
                            app:g_font="@string/roboto_regular" />


                    </TableRow>


                    <TableRow
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/border_round_corner"
                        android:padding="6dp">

                        <gautam.easydevelope.widget.GTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Email Address:"
                            android:textColor="@color/colorTextBlack"
                            android:textSize="15dp" />

                        <gautam.easydevelope.widget.GTextView
                            android:id="@+id/et_trader_register_emailaddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:inputType="text"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:textAllCaps="true"
                            android:textColorHint="@color/colorBlack"
                            android:textSize="15sp"
                            app:g_font="@string/roboto_regular" />

                    </TableRow>

                    <TableRow
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/border_round_corner"
                        android:padding="6dp">

                        <gautam.easydevelope.widget.GTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Address:"
                            android:textColor="@color/colorTextBlack"
                            android:textSize="15dp" />

                        <gautam.easydevelope.widget.GTextView
                            android:id="@+id/et_trader_register_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:inputType="text"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:textAllCaps="true"
                            android:textColorHint="@color/colorBlack"
                            android:textSize="15sp"
                            app:g_font="@string/roboto_regular" />


                    </TableRow>


                </TableLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="70dp"

                    android:layout_marginBottom="18dp"
                    app:cardBackgroundColor="#F6C028"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="0dp">

                    <gautam.easydevelope.widget.GButton
                        android:id="@+id/btn_trader_register_next"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/btn_transparent"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="Next"
                        android:textColor="@color/colorBlack"
                        android:textSize="18dp" />

                </androidx.cardview.widget.CardView>


            </LinearLayout>
            <!--..................Search Staff Layout End.....................-->

            <!--.......residence layout start..................-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:visibility="gone"
                android:id="@+id/ll_staff_residance"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="35dp"
                    android:background="@drawable/border_round_corner"
                    >

                    <Spinner
                        android:id="@+id/staff_spn_county"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="35dp"
                    android:background="@drawable/border_round_corner"
                    >
                    <Spinner
                        android:id="@+id/staff_spn_constituency"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="35dp"
                    android:background="@drawable/border_round_corner"
                    >

                    <Spinner
                        android:id="@+id/staff_spn_ward"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical"
                    android:layout_marginRight="35dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/border_round_corner">

                    <gautam.easydevelope.widget.GEditText
                        android:id="@+id/staff_manage_sales_target"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:background="@android:color/transparent"
                        android:hint="Sales Target:"
                        android:inputType="text"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:textAllCaps="true"
                        android:textColorHint="@color/colorBlack"
                        android:textSize="15sp"
                        app:g_font="@string/roboto_regular" />

                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="70dp"
                    android:id="@+id/cv_resi_next"
                    android:layout_marginBottom="18dp"
                    app:cardBackgroundColor="#F6C028"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="0dp">

                    <gautam.easydevelope.widget.GButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/btn_transparent"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="finish"
                        android:id="@+id/btn_staff_finish"
                        android:textColor="@color/colorBlack"
                        android:textSize="18dp" />

                </androidx.cardview.widget.CardView>
                <!---residance layout end..............-->



            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>