<resources>

    <!--dialog animation-->
    <!--dialog slide up slide down animation-->
    <style name="animations_slide_bottom_to_top" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="animations_slide_top_to_bottom" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/slide_down</item>
        <item name="android:windowExitAnimation">@anim/slide_up</item>
    </style>


    <style name="animations_slide_left_to_left" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/slide_left</item>
        <item name="android:windowExitAnimation">@anim/slide_right</item>
    </style>

    <style name="animations_slide_right_to_right" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/slide_right</item>
        <item name="android:windowExitAnimation">@anim/slide_left</item>
    </style>

    <style name="animations_slide_right_to_left" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/slide_right</item>
        <item name="android:windowExitAnimation">@anim/slide_back_left</item>
    </style>

    <style name="animations_slide_left_to_right" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/slide_right</item>
        <item name="android:windowExitAnimation">@anim/slide_back_right</item>
    </style>


    <!-- .......................................................................................-->

    <!--animation enter exit-->
    <style name="Animations_popup" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>

    <style name="MY.DIALOG" parent="Theme.AppCompat">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

</resources>
